@model Airoport.Models.Ticket

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <h3>Билет для:</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    @Html.Hidden("ClientId", @ViewBag.ClientId as string) <!--<input type="hidden" value="ViewBag.ClientId" name="ClientId" />-->

    <div class="form-group">
        @Html.LabelFor(model => model.DateTravels, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateTravels, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
            @Html.ValidationMessageFor(model => model.DateTravels, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CityStart, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CityStart, new SelectList(@ViewBag.Cities, "Id", "Name"), "Город")
            @Html.ValidationMessageFor(model => model.DateTravels, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CityFinish, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CityFinish, new SelectList(@ViewBag.Cities, "Id", "Name"), "Город")
            @Html.ValidationMessageFor(model => model.DateTravels, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
